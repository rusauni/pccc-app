            },
            {
              "condition": "(soTang >= 3 OR khoiTich >= 1500) AND loaiNha IN ['nha_o_rieng_le', 'nha_hon_hop', 'buu_dien', 'van_hoa', 'benh_vien']",
              "description": "Từ 3 tầng hoặc 1.500m³ cho một số loại nhà"
